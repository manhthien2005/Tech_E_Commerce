@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sidebar Categories -->
<aside class="sidebar">
    <ul class="category-menu">
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "laptop" })">
                <i class="fas fa-laptop"></i>
                <span>Laptop</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "laptop-gaming" })">
                <i class="fas fa-gamepad"></i>
                <span>Laptop Gaming</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "pc-gvn" })">
                <i class="fas fa-desktop"></i>
                <span>PC GVN</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "main-cpu-vga" })">
                <i class="fas fa-microchip"></i>
                <span>Main, CPU, VGA</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "case-nguon-tan" })">
                <i class="fas fa-server"></i>
                <span>Case, Nguồn, Tản</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "o-cung-ram-the-nho" })">
                <i class="fas fa-memory"></i>
                <span>Ổ cứng, RAM, Thẻ nhớ</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "loa-micro-webcam" })">
                <i class="fas fa-volume-up"></i>
                <span>Loa, Micro, Webcam</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
        <li class="category-item">
            <a href="@Url.Action("Category", "Product", new { category = "man-hinh" })">
                <i class="fas fa-tv"></i>
                <span>Màn hình</span>
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
    </ul>
</aside>

<!-- Main Content Area -->
<div class="main-content">
    <!-- Hero Banner -->
    <div class="hero-banner">
        <img src="/placeholder.svg?height=400&width=800" alt="Hero Banner">
    </div>

    <!-- Featured Products Section -->
    <section class="featured-section">
        <h2 class="section-title">Sản phẩm nổi bật</h2>
        <div class="product-grid">
            <!-- Example Product (keeping only one as requested) -->
            <div class="product-card">
                <div class="product-badge">Giảm 20%</div>
                <div class="product-image">
                    <img src="/placeholder.svg?height=200&width=200" alt="Laptop Gaming">
                </div>
                <div class="product-info">
                    <h3 class="product-title">Laptop Gaming ABC XYZ</h3>
                    <div class="product-specs">
                        <span>i7-12700H</span>
                        <span>RTX 3060</span>
                        <span>16GB RAM</span>
                        <span>512GB SSD</span>
                    </div>
                    <div class="product-price">
                        <span class="current-price">24.990.000₫</span>
                        <span class="old-price">29.990.000₫</span>
                    </div>
                    <div class="product-actions">
                        <button class="btn-add-to-cart">Thêm vào giỏ</button>
                        <button class="btn-buy-now">Mua ngay</button>
                    </div>
                </div>
            </div>
            <!-- Other products would be dynamically added -->
        </div>
    </section>

    <!-- Promotional Banners -->
    <section class="promo-banners">
        <div class="promo-banner">
            <img src="/placeholder.svg?height=150&width=380" alt="Khuyến mãi">
        </div>
        <div class="promo-banner">
            <img src="/placeholder.svg?height=150&width=380" alt="Khuyến mãi">
        </div>
        <div class="promo-banner">
            <img src="/placeholder.svg?height=150&width=380" alt="Khuyến mãi">
        </div>
    </section>

    <!-- Flash Sale Section -->
    <section class="flash-sale">
        <div class="section-header">
            <h2 class="section-title">Flash Sale</h2>
            <div class="countdown">
                <span>Kết thúc sau:</span>
                <div class="timer">
                    <span id="hours">00</span>:
                    <span id="minutes">00</span>:
                    <span id="seconds">00</span>
                </div>
            </div>
        </div>
        <div class="product-slider">
            <!-- Products would be dynamically added -->
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/countdown.js"></script>
    <script src="~/js/slider.js"></script>
}
